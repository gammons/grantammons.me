%article.post
  %header.post-header
    %h2.post-title= link_to article.title, article
  %section.post-excerpt
    %p
      = summary(article)
      = link_to '&raquo;', article, class: 'read-more'
  %footer.post-meta
    - if tags?(article)
      on #{tags(article)}
    %time.post-date{datetime: article.date.strftime('%Y-%m-%d')}
      = article.date.strftime(blog_settings.date_format)
